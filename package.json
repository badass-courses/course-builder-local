{
	"name": "course-builder-local",
	"displayName": "course-builder-local",
	"publisher": "badass",
	"description": "Publish Posts to your Course Builder Site from your IDE",
	"repository": "https://github.com/badass-courses/course-builder-local",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.93.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "course-builder-local.loadAndEditPost",
				"title": "Edit Course Builder Post"
			},
			{
				"command": "course-builder-local.createAndEditPost",
				"title": "Create and Edit New Post"
			},
			{
				"command": "course-builder-local.refreshPosts",
				"title": "Refresh Posts",
				"icon": "$(refresh)"
			},
			{
				"command": "course-builder-local.publishPost",
				"title": "Publish Post"
			},
			{
				"command": "course-builder-local.createNewPost",
				"title": "Create New Post",
				"icon": "$(add)"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "course-builder-local.refreshPosts",
					"when": "view == posts",
					"group": "navigation"
				},
				{
					"command": "course-builder-local.createNewPost",
					"when": "view == posts",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "course-builder-local.publishPost",
					"when": "view == posts && viewItem == unpublishedPost",
					"group": "inline"
				}
			]
		},
		"views": {
			"course-builder": [
				{
					"id": "posts",
					"name": "Posts"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "course-builder",
					"title": "Course Builder",
					"icon": "resources/course-builder.svg"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "npm run check-types && npm run lint && node esbuild.js",
		"watch": "npm-run-all -p watch:*",
		"watch:esbuild": "node esbuild.js --watch",
		"watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
		"package": "npm run check-types && npm run lint && node esbuild.js --production",
		"compile-tests": "tsc -p . --outDir out",
		"watch-tests": "tsc -p . -w --outDir out",
		"pretest": "npm run compile-tests && npm run compile && npm run lint",
		"check-types": "tsc --noEmit",
		"lint": "eslint src",
		"test": "vscode-test",
		"prettier": "prettier --write ./src"
	},
	"devDependencies": {
		"@types/mocha": "^10.0.8",
		"@types/node": "20.x",
		"@types/vscode": "^1.93.0",
		"@typescript-eslint/eslint-plugin": "^8.7.0",
		"@typescript-eslint/parser": "^8.7.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"esbuild": "^0.24.0",
		"eslint": "^9.11.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.6.2"
	},
	"dependencies": {
		"@ianvs/prettier-plugin-sort-imports": "^4.3.1",
		"openid-client": "^5.7.0",
		"prettier": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.8",
		"zod": "^3.23.8"
	}
}
